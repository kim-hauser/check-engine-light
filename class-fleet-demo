//Creates class FleetCars so we're not having to code/update every object by hand. Constructors create keys for each object (car).

class FleetCars {
    constructor(type, make, model, year, mileage = 0) {
        this.type = type;
        this.make = make;
        this.model = model;
        this.year = year;
        this.mileage = mileage;
    }

    drive(distance) {
        const newTotalMiles = this.mileage + distance;
        if (typeof distance !== 'number' || distance < 0){
            console.log(`Error: New miles must be a non-negative number. Rolling back odometers is BAD! :-(`);
        } else {
            this.mileage = newTotalMiles;
            console.log(newTotalMiles);
        }
    }
    
    getDetails() {
        console.log(`~~~ Vehicle Details ~~~`);
        console.log(`Type: ${this.type}`);
        console.log(`Make: ${this.make}`);
        console.log(`Model: ${this.model}`);
        console.log(`Year: ${this.year}`);
        console.log(`Mileage: ${this.mileage}`);
    };

    getCarString() {
        return `Vehicle Details:\nMake: ${this.type}\nModel: ${this.make}\nYear: ${this.model}\nColor: ${this.year}\nVIN: ${this.mileage}`;
    }
}

let car1 = new FleetCars ('Sedan', 'Toyota', 'Corolla', 2018, 100000);
let car2 = new FleetCars ('SUV', 'Subaru', 'Outback', 2023, 50000);
let car3 = new FleetCars ('SUV', `Chevrolet`,'Blazer', 2020, 150000);

car2.drive(500); // Updates mileage to car2 (Cartee's Outback)

console.log(`${car1.model}\n`) // Displays model name for car1 (My Corolla).

car1.getDetails(); // > Test for my Corolla's info.
car2.getDetails(); // > Method to display Cartee's car info.
car3.getDetails(); // > Test for my mom's car info.
